# Environment
NODE_ENV=development
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://mongo:27017/enterprise

# Cache & Pub/Sub
REDIS_URL=redis://redis:6379

# Message Queue
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Gateway Configuration
GATEWAY_PORT=8080
CORS_ORIGIN=http://localhost:3000

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
INVENTORY_SERVICE_PORT=3006

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=enterprise-platform
OTEL_RESOURCE_ATTRIBUTES=service.namespace=enterprise,deployment.environment=development